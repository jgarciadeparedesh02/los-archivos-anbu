---
import Layout from '../../layouts/Layout.astro';
import { Card, CardContent } from '../../components/ui/card';
import { BookText, BriefcaseBusiness, Smartphone, Server, Database, Lightbulb, Users } from 'lucide-react';

const subjects = [
  { acronym: 'DI', name: 'Desarrollo de Interfaces', icon: BookText },
  { acronym: 'SGE', name: 'Sistemas de Gestión Empresarial', icon: BriefcaseBusiness },
  { acronym: 'PMDM', name: 'Programación Multimedia y Dispositivos Móviles', icon: Smartphone },
  { acronym: 'PSP', name: 'Programación de Servicios y Procesos', icon: Server },
  { acronym: 'AD', name: 'Acceso a Datos', icon: Database },
];
---

<Layout title="Asignaturas DAM">
  <main class="container mx-auto flex-grow flex items-center justify-center py-12 px-4">
    <div class="max-w-4xl w-full text-center rounded-lg ">
      <h1 class="text-5xl font-cinzel text-gray-800 mb-10">Asignaturas de Desarrollo de Aplicaciones Multiplataforma</h1>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {subjects.map((subject) => (
          subject.acronym === 'DI' ? (
            <a href="/desarrollo-interfaces">
              <Card className="bg-[#F9F6F1] hover:shadow-lg border-4 border-stone-200 transition-shadow duration-300 ease-in-out transform hover:-translate-y-1 h-full py-0">
                <CardContent className="flex flex-col items-center justify-center p-6">
                  <subject.icon className="w-12 h-12 text-stone-700 mb-4" />
                  <h2 class="text-2xl font-cinzel text-stone-800 mb-2">{subject.acronym}</h2>
                  <p class="text-md font-open-sans text-stone-600">{subject.name}</p>
                </CardContent>
              </Card>
            </a>
          ) : (
            <div className="opacity-50 cursor-not-allowed" title="En construcción">
              <Card className="bg-[#F9F6F1] border-4 border-stone-200 h-full py-0">
                <CardContent className="flex flex-col items-center justify-center p-6">
                  <subject.icon className="w-12 h-12 text-stone-700 mb-4" />
                  <h2 class="text-2xl font-cinzel text-stone-800 mb-2">{subject.acronym}</h2>
                  <p class="text-md font-open-sans text-stone-600">{subject.name}</p>
                </CardContent>
              </Card>
            </div>
          )
        ))}
      </div>
    </div>
  </main>
</Layout>
